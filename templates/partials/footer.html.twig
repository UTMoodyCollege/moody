<footer class="ut-footer {{ logo_height }}" role="contentinfo">
  <div class="container">
    <div class="row pb-5">
      <div class="col-12 col-sm-6 col-md-4">
        {% if subsite_footer_text %}
          <div class="subsite-footer-text">
            <h2 class="ut-h4">{{ subsite_title }}</h2>
            <p class="footer-textarea">{{ subsite_footer_text }}</p>
          </div>
        {% endif %}
        {{ page.footer_left }}
      </div>
      {% if page.footer_middle %}
        <div class="col-12 col-sm-6 col-md-3">
          {{ page.footer_middle }}
        </div>
        <div class="col-12 col-md-5">
          {{ page.footer_right }}
        </div>
      {% else %}
      <div class="col-12 col-sm-6 col-md-8">
        {{ page.footer_right }}
      </div>
      {% endif %}
    </div>
    <div class="row">
      <div class="col-12">
        <p class="text--copyright">Â© The University of Texas at Austin {{ year }}</p>
      </div>
    </div>
  </div>
</footer>
